# ReelSpeed Backend Environment Variables

# MongoDB
MONGODB_URI=mongodb://localhost:27017/reelspeed

# JWT
JWT_SECRET=your-super-secret-jwt-key-here

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Stripe Configuration (Required for billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_PRO_MONTHLY_PRICE_ID=price_your_pro_monthly_id
STRIPE_PRO_YEARLY_PRICE_ID=price_your_pro_yearly_id  
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_your_enterprise_monthly_id
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_your_enterprise_yearly_id

# AWS Configuration (for video storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-reelspeed-bucket

# OpenAI (for AI features)
OPENAI_API_KEY=sk-your-openai-key-here

# ElevenLabs (for voice synthesis)
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Video Processing
LAMBDA_FUNCTION_NAME=remotion-render-4-0-331-mem3008mb-disk10240mb-900sec

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Development
NODE_ENV=development
PORT=3001

# Feature Flags
MOCK_ELEVENLABS=false
MOCK_OPENAI=false